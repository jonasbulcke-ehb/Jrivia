<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    style="@style/Widget.Jrivia.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.Jrivia.AppWidgetContainer">

    <TextView
        android:id="@+id/widgetDailyLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/daily_quest"
        android:text="@string/daily_quest"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/widgetDailyTextView"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/today_not_available_yet" />
</LinearLayout>